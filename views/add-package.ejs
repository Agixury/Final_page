<body>
    
    <nav>
        <ul style="padding-left: 180px;">
            <li style="padding-right: 10px;"><a href="#">Username</a></li>
        </ul>
    </nav>

    <div class="sidebar">
        <a href="/"><i class="fa fa-fw fa-home"></i> Home</a>
        <a href="/admin"><i class="fa fa-fw fa-user"></i> User</a>
        <a href="#"><i class="fa fa-fw fa-chart-area"></i> Analytics</a>
        
        <div id="show"><a href="#" class="active"><i class="fa fa-fw fa-plane"></i> Tour Packages</a></div>
        <div class="subMenu" style="display: none;">
            <a href="/admin/all-packages" style="font-size: medium; text-indent: 5px;">All Packages</a>
            <a href="#" style="font-size: medium; text-indent: 5px;">Add Packages</a>
            <a href="/admin/all-package-category" style="font-size: medium; text-indent: 5px;">All Package Category</a>
            <a href="#" style="font-size: medium; text-indent: 5px;">Add Package Category</a>
        </div>
        
        <a href="#"><i class="fa fa-fw fa-building"></i> Hotels</a>
        <a href="#"><i class="fa fa-fw fa-calendar"></i> Calendar</a>
        <a href="#"><i class="fa fa-fw fa-cogs"></i> Settings</a>
    </div>


    <div class="row" style="padding-left: 200px;">
        <div class="col-0 col-md-3"></div>
        <div class="col-auto d-sm-flex align-items-center mb-4 mt-2 ml-4">
            <h3 class="text-dark mb-0 mt-1">New Package</h3>
        </div>
    </div>

    <div class="row" style="padding-left: 200px;">
        <div class="col-0 col-md-3"></div>
        <div class="col-12 col-md-5 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="text-primary font-weight-bold m-0">Add New Package</h6>
                </div>
                <div class="card-body">
                    <form>
                        <div class="form-group row">
                            <label for="packagename" class="col-md-3 col-form-label">Package Name</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="packagename" placeholder="Package Name">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="description" class="col-md-3 col-form-label">Package Description</label>
                            <div class="col-md-9">
                                <textarea class="form-control" name="description" placeholder="Package Description" rows="5"></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="authorname" class="col-md-3 col-form-label">Choose Category</label>
                            <div class="col-md-9">
                                <select class="form-control">
                                    <option>Category 1</option>
                                    <option>Category 2</option>
                                    <option>Category 3</option>
                                    <option>Category 4</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="authorname" class="col-md-3 col-form-label">Author Name</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="authname" placeholder="Author Name">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="telnum" class="col-7 col-md-3 col-form-label">Upload Blog Banner</label>
                            <div class="col-3 col-md-9">
                                <button type="button" class="btn btn-success">Upload</button>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-auto">
                                <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


</body>

<script>
    $(document).ready(function(){
        $('#show').click(function(){
            $('.subMenu').toggle("slide");
        });
    });
</script>

