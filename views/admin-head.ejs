<style>

    .sidebar{
        height: 100%;
        width: 190px;
        position: fixed;
        z-index: 1;
        top: 0;
        left: 0;
        background-color: #111;
        overflow-x: hidden;
        padding-top: 16px;
    }
    
    .sidebar a{
        padding: 10px 8px 10px 16px;
        text-decoration: none;
        font-size: 20px;
        color: #818181;
        display: block;
    }
    
    .sidebar a:hover{
        color: #f1f1f1;
    }
    
    @media screen and (max-height: 450px) {
        .sidebar {padding-top: 15px;}
        .sidebar a {font-size: 18px;}
    }
    
    nav ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #333;
    }
    
    nav li {
        float: right;
    }
    
    li a{
        display: block;
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
    }
    
    nav li a:hover {
        color: #fff;
        background-color: #111;
        text-decoration: none;
    }
    
