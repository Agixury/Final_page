    <%- include('partials/header-navbar.ejs') %>

    <div class="row justify-content-center col-sm-12 col-md-12">
        <h1>Welcome to Our Customer Support</h1>
    </div>
    <div class="row justify-content-center col-sm-12 col-md-12">
        <h3>Submit your queries, Our Team will Contact you in 48 hours</h3>
    </div>

    <form action="http://localhost:3000/api/feedback" method="POST">
        <div class="row justify-content-center">
            <div class="col-md-4 col-sm-12 left">
                <select name="query">
                    <option>Query type</option>
                    <option>Booking</option>
                    <option>Payment</option>
                    <option>Cancellation</option>
                </select><br>
                <input name="name" type="text" placeholder="   Name*"><br>
                <input name="email" type="email" placeholder="   Email*"><br>
                <input name="contactNumber" type="number" placeholder="   Contact Number*">
                <div class="upload">
                    <label id="file-name" class="left" for="file-upload">Upload a File</label>
                    <input onchange="update()" id="file-upload" style="display: none;" type="file">
                    <label class="right" for="file-upload">Browse</label>
                </div>
                <p>(only doc, jpg, png, pdf, txt, allowed. Max. file sie is 500KB)</p><br><br><br><br>
            </div>
            <div class="col-md-4 col-sm-12 right">
                <textarea name="description" cols="40" rows="20" placeholder="Your Complaints/questions/Suggestions"></textarea>
            </div>
        </div>
        <div class="row inline justify-content-center col-md-12 col-sm-8 up">
            <button id="btn" type="submit">SUBMIT</button>
        </div>
    </form><br><br><br>

    <div class="row justify-content-center col-sm-12 col-md-12">
